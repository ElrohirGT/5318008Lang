function sumar(n: integer): integer {
	// FIXME: This should be able to be done without IF...ELSE
	// if (n <= 0) {
	//	 return 0;
	// }
	// return n + sumar(n-1);

	if (n<= 0) {
		return 0;
	} else {
		return n+sumar(n-1);
	}
}
---
SEC sumar:
	// (n)
	LOAD t1
	GOTO sumar_IF_0
	SEC sumar_IF_0_RETURN:
SEC sumar_IF_0:
	LTE t2 t1 0
	IF t2 GOTO sumar_IF_0_BODY
	IF NOT t2 GOTO sumar_IF_0_ELSE
SEC sumar_IF_0_BODY:
	RETURN 0
	GOTO sumar_IF_0_RETURN
SEC sumar_IF_0_ELSE:
	SUB t3 t1 1
	// (n-1)
	PARAM t3
	// (sumar(n-1))
	CALLRET t5 sumar 1
	ADD t6 t1 t5
	RETURN t6
	GOTO sumar_IF_0_RETURN
